 <params.com.stepview.StatusViewScroller
            android:id="@+id/statusViewScroller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:stepCount="3"
            app:currentCount="0"
            app:drawLabels="true"
            app:circleColorType="fillStroke"
            app:lineGap="5dp"
            app:lineWidth="3dp"
            app:lineColor="@color/green"
            app:lineColorIncomplete="@color/green"
            app:lineColorCurrent="@color/green"
            app:circleColor="@color/green"
            app:circleColorCurrent="@color/white"
            app:circleColorIncomplete="@color/white"
            app:textColorLabels="@color/green"
            app:textColorLabelsCurrent="@color/green"
            app:textColorLabelsIncomplete="@color/green"
            app:circleStrokeWidth="1dp"
            app:circleStrokeColorCurrent="@color/green"
            app:circleStrokeColor="@color/green"
            app:textSizeLabels="15sp"
            app:completeDrawable="@drawable/ic_done_black_24dp"/>
